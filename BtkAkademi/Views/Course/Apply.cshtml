@model Candidate
<div class="display-6">
    Apply
</div>

<form>
    <div class="form-group my-2">
        <label>Email</label>
        <input name="Email" class="form-control"/>
    </div>

    <div class="form-group my-2">
        <label>Firstname</label>
        <input name="FirstName" class="form-control"/>
    </div>

    <div class="form-group my-2">
        <label>Lastname</label>
        <input name="LastName" class="form-control"/>
    </div>

    <div class="form-group my-2">
        <label>Age</label>
        <select name="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select one course</legend>
        <p>
            <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET MVC">
            <label>ASP.NET CORE MVC</label>
        </p>
        <p>
            <input id="api" type="radio" name="SelectedCourse" value="ASP.NET API">
            <label>ASP.NET CORE API</label>
        </p>
        <p>
            <input id="mvc" type="radio" name="SelectedCourse" value="Blazor">
            <label>Blazor</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
    </div>
    
</form>